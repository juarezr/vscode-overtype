{
    "name": "overtype",
    "version": "0.6.0",
    "displayName": "Overtype",
    "description": "Provides insert/overtype mode.",
    "publisher": "juarezr",
    "categories": [
        "Other"
    ],
    "keywords": [
        "overtype",
        "overwrite",
        "insert"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "license": "BSD-2-Clause",
    "homepage": "https://github.com/juarezr/vscode-overtype",
    "bugs": "https://github.com/juarezr/vscode-overtype/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/juarezr/vscode-overtype"
    },
    "main": "./out/extension",
    "engines": {
        "vscode": "^1.55.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Overtype configuration",
            "properties": {
                "overtype.paste": {
                    "type": "boolean",
                    "default": false,
                    "description": "When in overtype mode, uses overtype behavior when pasting text."
                },
                "overtype.perEditor": {
                    "type": "boolean",
                    "default": true,
                    "description": "Sets the insert/overtype mode per editor."
                },
                "overtype.secondaryCursorStyle": {
                    "type": "string",
                    "default": "block-inline",
                    "description": "Sets the overtype cursor style."
                },
                "overtype.labelInsertMode": {
                    "type": "string",
                    "default": "INS",
                    "description": "Label text in the status bar shown during Insert Mode, may be empty to hide the status."
                },
                "overtype.labelOvertypeMode": {
                    "type": "string",
                    "default": "OVR",
                    "description": "Label text in the status bar shown during Overtype Mode, may be empty."
                }
            }
        },
        "commands": [
            {
                "command": "overtype.toggle",
                "title": "Toggle Insert/Overtype"
            }
        ],
        "keybindings": [
            {
                "command": "overtype.toggle",
                "key": "insert",
                "when": "editorTextFocus && !editorReadonly && !inCompositeEditor"
            }
        ]
    },
    "scripts": {
        "lint": "eslint -c .eslintrc.js --ext .ts src",
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "npx @vscode/vsce package",
        "vsix": "npx @vscode/vsce package",
        "install-extension": "code --install-extension *.vsix",
        "cleanup": "rm -Rf out *.vsix",
        "sweep": "git clean -Xdf"
    },
    "devDependencies": {
        "@types/vscode": "^1.91.0",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.14.1",
        "eslint": "^8.56.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsdoc": "^48.5.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-promise": "^6.4.0",
        "eslint-plugin-unicorn": "^54.0.0",
        "typescript": "5.5.3"
    },
    "dependencies": {
        "@vscode/vsce": "^2.29.0"
    }
}
